<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <ImageView
        android:id="@+id/top_header_background"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.02"
        android:background="@drawable/universal_background"
        android:contentDescription="@string/desc" />

    <RelativeLayout
        android:id="@+id/header_background"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.04"
        android:background="@drawable/universal_background" >

        <ImageButton
            android:id="@+id/hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/desc"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hamburger" />

        <ImageView
            android:id="@+id/result_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/resulttext" />

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/desc"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/bottom_header__background"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.02"
        android:background="@drawable/universal_background"
        android:contentDescription="@string/desc" />
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dip"
    	android:layout_weight="0.1"  >
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"  >

        <ImageButton
            android:id="@+id/listButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left_tab_filled"
            android:contentDescription="@string/desc"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/right_tab_empty"
            android:contentDescription="@string/desc" />
		</LinearLayout>
    </LinearLayout>

	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dip" 
    	android:layout_weight="0.82" >

	  <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	
	  <ListView
	        android:id="@+id/searchResults"
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:scrollbars="vertical"
	        android:divider="@null"
	        android:dividerHeight="0dp" />

	  	</RelativeLayout>
	</LinearLayout>
</LinearLayout>