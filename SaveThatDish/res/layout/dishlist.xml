<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#D8D4D4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <RelativeLayout
        android:id="@+id/TopHeaderBuffer"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.02"
        android:background="@drawable/universal_background"
        android:orientation="vertical" >

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.04"
        android:background="@drawable/universal_background" >

        <ImageButton
            android:id="@+id/hamburgerbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/hamburger"
            android:background="@null"
            android:minHeight="0dp"
            android:minWidth="0dp" 
            android:padding="0dp"/>

        
        <ImageView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/header_hometext" />

        <ImageButton
            android:id="@+id/addbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
			android:scaleType="fitCenter" 
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:background="@null"
            android:src="@drawable/add"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            />
		
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BottomHeaderBuffer"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.02"
        android:background="@drawable/universal_background"
        android:orientation="vertical" >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topTabBuffer"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.02"
        android:background="@drawable/whiterectangle" >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:background="#FFFFFF"
        android:layout_weight="0.07" 
        android:orientation="horizontal">
        
            <!-- Empty layout (0x0 dp) centered horizontally -->
    	<TextView
        	android:id="@+id/dummy" 
        	android:layout_width="0dp" 
        	android:layout_height="0dp"
        	android:layout_centerHorizontal="true" 
        	android:visibility="invisible"/>

        <ImageView
            android:id="@+id/roundedRectangle_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/desc"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:src="@drawable/whiteroundedrect" />
        
        <ImageView
            android:id="@+id/leftRoundedRect"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/roundedRectangle_container"
			android:layout_alignTop="@+id/roundedRectangle_container"
            android:contentDescription="@string/desc"
            android:adjustViewBounds="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
			android:src="@drawable/lefttealroundedrect"
			/>
        
        <ImageView
            android:id="@+id/rightRoundedRect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/roundedRectangle_container"
            android:layout_alignTop="@+id/roundedRectangle_container"
            android:contentDescription="@string/desc"
            android:src="@drawable/righttealroundedrect" 
            android:adjustViewBounds="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:visibility="invisible" 
            />

        <ImageButton
            android:id="@+id/dishListText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/roundedRectangle_container"
            android:layout_alignTop="@+id/roundedRectangle_container"
            android:layout_marginLeft="9dp"
            android:layout_alignRight="@+id/dummy"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/whitedishlisttext"
            android:contentDescription="@string/desc"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:adjustViewBounds="true" />
        
        <ImageButton
            android:id="@+id/historyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/roundedRectangle_container" 
            android:layout_alignTop="@+id/dishListText"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/dummy"
            android:background="@drawable/tealhistorytext"
            android:contentDescription="@string/desc"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:adjustViewBounds="true" 
            />
            
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomTabBuffer"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:orientation="horizontal"
        android:background="#FFFFFF" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topSearchBuffer"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:background="@null" >

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:background="@null" >

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:background="@null"
            android:minHeight="0dp"
            android:minWidth="0dp"   
            android:layout_marginLeft="14dp"
            android:src="@drawable/searchicon" />
        
        <AutoCompleteTextView
      	    android:id="@+id/searchDishList"
      	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/searchIcon"
	        android:layout_toRightOf="@+id/searchIcon"
	        android:layout_marginLeft="4dp"
    	    android:background="@null"
        	android:ems="10"
        	android:text="@string/searchtext" />

        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/desc"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:scaleType="centerCrop"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/mapbutton" />

        <ImageButton
            android:id="@+id/sortButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/mapButton"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="1dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/desc"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="6dp"
            android:paddingTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sortbutton" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:background="@null"
        android:layout_weight="0.75"
        android:paddingLeft="0dip" >
   
     	<ImageView
        	android:id="@+id/searchdivider"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:layout_marginTop="2dp"
        	android:contentDescription="@string/desc"
        	android:src="@drawable/searchdivider" />
     	        

     	<ListView
     	    android:id="@+id/listView1"
     	    android:layout_width="match_parent"
     	    android:layout_height="60dp"
     	    android:layout_alignParentLeft="true"
     	    android:layout_below="@+id/searchdivider" >
     	</ListView>
              
     </RelativeLayout>
    
</LinearLayout>
